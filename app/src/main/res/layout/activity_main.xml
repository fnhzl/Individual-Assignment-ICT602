<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="#595959"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  BMI Calculator"
        android:textSize="29dp"
        android:textColor="#ffff"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"
        android:drawableLeft="@drawable/ic__5ba0f7164f52e5432f401a55e204753"
        ></TextView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  WEIGHT"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic__ce2fd77cb0e529e2c53906d641b836d"
            android:textColor="#ffff"
            ></TextView>

        <EditText
            android:id="@+id/etweight"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="KG"
            android:inputType="number|numberDecimal"
            android:textSize="15dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  HEIGHT"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_measure_height"
            android:textColor="#ffff"
            ></TextView>

        <EditText
            android:id="@+id/etheight"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginLeft="80dp"
            android:background="#ffff"
            android:gravity="center"
            android:hint="CM"
            android:inputType="number|numberDecimal"
            android:textSize="15dp"></EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btsave"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="SAVE"
            android:drawableLeft="@drawable/ic__639912_save_icon"
            android:onClick="save"/>

        <Button
            android:id="@+id/btload"
            android:layout_width="5dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="LOAD"
            android:drawableLeft="@drawable/ic_loading_svgrepo_com"
            android:onClick="load"/>
    </LinearLayout>

    <Button
        android:id="@+id/btcalc"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:text="Calculate BMI"
        android:drawableLeft="@drawable/ic_calculator_svgrepo_com"
        android:textColor="#ffff"
        android:textSize="15dp"></Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMI"
        android:textSize="15dp"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/outBMI"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#D60F54"
        android:textStyle="bold"
        android:background="@color/white"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Classification"
        android:textSize="15dp"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/outClass"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#D60F54"
        android:textStyle="bold"
        android:background="@color/white"
        android:textSize="20dp"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Health Risk"
        android:textSize="15dp"
        android:textColor="#ffff"
        android:layout_marginTop="10dp"
        ></TextView>
    <TextView
        android:id="@+id/outHR"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#D60F54"
        android:textStyle="bold"
        android:background="@color/white"
        android:textSize="20dp"></TextView>

    <Button
        android:id="@+id/btreset"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:text="Reset"
        android:textColor="#ffff"
        android:textSize="20dp"></Button>

    <Button
        android:id="@+id/button"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:text="ABOUT"
        android:textSize="20dp"></Button>

</LinearLayout>